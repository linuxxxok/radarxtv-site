  <!-- JS Scripting -->
  <script>
    // IP Address fetch
    async function getUserIP() {
      try {
        const response = await fetch('https://checkip.amazonaws.com');
        const ip = await response.text();
        document.getElementById('userIP').textContent = ip.trim();
      } catch {
        document.getElementById('userIP').textContent = "Unavailable";
      }
    }

    // GSAP Animations
    document.addEventListener('DOMContentLoaded', () => {
      getUserIP();

      gsap.from(".hero-content h1", { y: -50, opacity: 0, duration: 1, ease: "power3.out" });
      gsap.from(".hero-content p", { y: 20, opacity: 0, delay: 0.4 });
      gsap.from(".cta-btn", { scale: 0.8, opacity: 0, delay: 0.7 });

      gsap.from(".box", {
        opacity: 0,
        y: 40,
        delay: 0.3,
        stagger: 0.2,
        duration: 0.8,
        ease: "power2.out"
      });
    });

    // PWA: Add to Home Screen
    let deferredPrompt;
    const installBtn = document.getElementById('installBtn');

    window.addEventListener('beforeinstallprompt', (e) => {
      e.preventDefault();
      deferredPrompt = e;
      installBtn.style.display = 'block';
    });

    installBtn.addEventListener('click', () => {
      installBtn.style.display = 'none';
      deferredPrompt.prompt();
      deferredPrompt.userChoice.then(choiceResult => {
        if (choiceResult.outcome === 'accepted') {
          console.log("üëç Installed");
        } else {
          console.log("üëé Dismissed");
        }
        deferredPrompt = null;
      });
    });

    // Register service worker
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.register('/service-worker.js')
        .then(() => console.log('‚úÖ Service Worker Registered'))
        .catch(err => console.error('‚ùå Service Worker Error:', err));
    }
  </script>
