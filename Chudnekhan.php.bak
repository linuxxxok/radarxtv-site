<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>RadarX Live</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/shaka-player/4.3.5/shaka-player.compiled.min.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      background: #000010;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    .player-wrapper {
      position: relative;
      width: 95%;
      max-width: 960px;
      aspect-ratio: 16/9;
      background: #000;
      border: 2px solid #00ffe0;
      box-shadow: 0 0 20px #00ffe055;
      border-radius: 20px;
      overflow: hidden;
    }

    video {
      width: 100%;
      height: 100%;
      background: black;
      pointer-events: none; /* prevent manual interaction */
    }

    #playOverlay {
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(0, 0, 0, 0.4);
      cursor: pointer;
      z-index: 10;
    }

    #playOverlay:hover {
      background: rgba(0, 0, 0, 0.6);
    }

    #playBtn {
      font-size: 60px;
      color: #00ffe0;
      background: rgba(0,0,0,0.5);
      border-radius: 50%;
      width: 90px;
      height: 90px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px solid #00ffe0;
    }

    #liveTag {
      position: absolute;
      top: 10px;
      left: 10px;
      background: red;
      padding: 4px 10px;
      border-radius: 4px;
      font-size: 13px;
      font-weight: bold;
      z-index: 11;
    }
  </style>
</head>
<body>

  <div class="player-wrapper">
    <video id="video" muted playsinline></video>
    <div id="playOverlay">
      <div id="playBtn">â–¶</div>
    </div>
    <div id="liveTag">LIVE</div>
  </div>

  <script>
    const manifestUri = "https://sundirectgo-live.pc.cdn.bitgravity.com/hd38/dth.mpd";
    const keyId = "5e833f4019554aa394ff6de2eb19bf78";
    const key = "f60e08a145804890492f315b61789ac5";

    async function initPlayer() {
      const video = document.getElementById("video");
      const player = new shaka.Player(video);
      shaka.polyfill.installAll();

      player.configure({
        drm: { clearKeys: { [keyId]: key } },
        streaming: {
          rebufferingGoal: 2,
          bufferingGoal: 4,
          lowLatencyMode: true,
          abr: {
            enabled: true,
            defaultBandwidthEstimate: 6000000
          }
        }
      });

      player.addEventListener('error', e => {
        console.error('Error Code', e.detail.code, e.detail);
        alert("Error: " + e.detail.message);
      });

      try {
        await player.load(manifestUri);
        console.log('Stream loaded');
      } catch (e) {
        alert("Failed to load stream.");
        console.error(e);
      }
    }

    document.addEventListener("DOMContentLoaded", () => {
      initPlayer();

      const overlay = document.getElementById("playOverlay");
      const video = document.getElementById("video");

      overlay.addEventListener("click", () => {
        video.muted = false;
        video.play();
        overlay.style.display = "none";
      });
    });
  </script>

</body>
</html>