<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RadarX TV</title>
    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #121212;
            color: white;
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        /* Heading */
        h2 {
            color: #00eaff;
            text-shadow: 0 0 10px #00eaff;
        }

        /* Iframe Container */
        #iframe-container {
            width: 80%;
            max-width: 900px;
            height: 500px;
            margin: auto;
            border-radius: 15px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 0 20px #00eaff;
        }

        /* Glowing Effect on Iframe */
        #streamFrame {
            width: 100%;
            height: 100%;
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 20px #00eaff, 0 0 40px #00eaff, 0 0 60px #00eaff;
        }

        /* Telegram Button */
        #telegram-btn {
            margin-top: 20px;
            padding: 12px 25px;
            background: linear-gradient(45deg, #0088cc, #00eaff);
            color: white;
            border: none;
            cursor: pointer;
            font-size: 18px;
            font-weight: bold;
            border-radius: 8px;
            transition: 0.3s;
            box-shadow: 0 0 10px #00eaff;
        }

        #telegram-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 0 20px #00eaff;
        }

        /* Popup Styling */
        #popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(18, 18, 18, 0.95);
            padding: 20px;
            box-shadow: 0px 0px 15px #00eaff;
            border-radius: 10px;
            text-align: center;
            color: white;
            width: 300px;
        }

        #popup p {
            font-size: 18px;
            font-weight: bold;
            color: #00eaff;
        }

        #popup button {
            margin: 10px;
            padding: 12px 18px;
            cursor: pointer;
            border: none;
            font-size: 16px;
            font-weight: bold;
            border-radius: 5px;
        }

        .ok-btn {
            background: linear-gradient(45deg, #0088cc, #00eaff);
            color: white;
            box-shadow: 0 0 10px #00eaff;
            transition: 0.3s;
        }

        .ok-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 0 20px #00eaff;
        }

        .cancel-btn {
            background-color: gray;
            color: white;
            box-shadow: 0 0 10px gray;
            transition: 0.3s;
        }

        .cancel-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 0 15px gray;
        }

    </style>
</head>
<body>

    <h2>ðŸš€ RadarXWillow Live ðŸ”¥</h2>
    
    <!-- Iframe Container -->
    <div id="iframe-container">
        <iframe id="streamFrame" src="https://RadarxTV.site/proxyy.php" allowfullscreen onerror="reloadIframe()"></iframe>
    </div>

    <!-- Telegram Button -->
    <button id="telegram-btn" onclick="joinTelegram()">Join Telegram @RadarXCricket</button>

    <!-- Popup Box -->
    <div id="popup">
        <p>Join <b>@RadarXCricket</b> on Telegram?</p>
        <button class="ok-btn" onclick="openTelegram()">OK</button>
        <button class="cancel-btn" onclick="closePopup()">Cancel</button>
    </div>

    <script>
        // Auto Reload Iframe if Load Fails
        function reloadIframe() {
            setTimeout(() => {
                document.getElementById("streamFrame").src = "https://tv4wap.tiiny.io/sportstv.php?c=willowusa";
            }, 3000); // 3 sec delay before retry
        }

        // Show popup on page load
        window.onload = function() {
            document.getElementById("popup").style.display = "block";
        };

        function openTelegram() {
            window.location.href = "https://t.me/RadarXCricket"; 
        }

        function closePopup() {
            document.getElementById("popup").style.display = "none";
        }

        function joinTelegram() {
            window.open("https://t.me/RadarXCricket", "_blank");
        }
    </script>

</body>
</html>