/* Global Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body, html {
  height: 100%;
  font-family: 'Poppins', 'Inter', sans-serif;
  background: linear-gradient(135deg, #0a0a23, #141438);
  color: #f0f0f0;
  overflow-x: hidden;
}

/* Smooth scrolling */
html {
  scroll-behavior: smooth;
}

/* üé® Parallax Background */
.parallax-bg {
  background: url('bg.svg') no-repeat center center;
  background-size: cover;
  filter: blur(20px) brightness(0.4);
  position: fixed;
  top: 0; left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  animation: float 30s linear infinite;
}

/* ‚õ≥ Hero Section */
.hero {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
  text-align: center;
  padding: 0 20px;
  background: radial-gradient(#1b1b34, #0a0a23);
}

.hero-content h1 {
  font-size: 3rem;
  font-weight: 800;
  background: linear-gradient(to right, #00ffc3, #725cff);
  -webkit-background-clip: text;
  color: transparent;
  margin-bottom: 1rem;
}

.hero-content h1 span {
  color: #ff2e63;
}

.hero-content p {
  font-size: 1.2rem;
  color: #ccc;
  max-width: 600px;
  margin: 0 auto 2rem;
}

.cta {
  text-decoration: none;
  font-size: 1rem;
  font-weight: bold;
  padding: 14px 28px;
  border-radius: 50px;
  background: linear-gradient(to right, #ff416c, #ff4b2b);
  color: white;
  transition: all 0.3s ease;
  box-shadow: 0 0 20px rgba(255, 65, 108, 0.4);
}

.cta:hover {
  transform: scale(1.05);
  box-shadow: 0 0 25px rgba(255, 65, 108, 0.7);
}

/* üß© Features Section */
.features {
  padding: 80px 20px;
  background: #0e0e2d;
  text-align: center;
}

.features h2 {
  font-size: 2.2rem;
  margin-bottom: 2rem;
  color: #fff;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 30px;
  max-width: 1100px;
  margin: 0 auto;
}

.feature-box {
  padding: 25px 20px;
  background: #1f1f3b;
  border-radius: 16px;
  transition: transform 0.4s ease;
  border: 1px solid rgba(255,255,255,0.05);
}

.feature-box:hover {
  transform: translateY(-8px);
  box-shadow: 0 10px 30px rgba(0,255,255,0.1);
}

.feature-box i {
  font-size: 2rem;
  color: #ffd700;
  margin-bottom: 12px;
}

.feature-box h3 {
  font-size: 1.3rem;
  margin-bottom: 10px;
}

.feature-box p {
  font-size: 0.95rem;
  color: #c2c2ff;
}

/* üì¶ Footer */
footer {
  background: #0a0a23;
  padding: 20px;
  text-align: center;
  color: #888;
  font-size: 0.9rem;
}

/* üå´ Background Float Animation */
@keyframes float {
  0% { background-position: 0% 0%; }
  100% { background-position: 100% 100%; }
}

/* üîÅ Responsive Typography */
@media (max-width: 768px) {
  .hero-content h1 {
    font-size: 2.2rem;
  }

  .hero-content p {
    font-size: 1rem;
  }

  .cta {
    padding: 12px 24px;
    font-size: 0.95rem;
  }
}
